    </div>
  </div>

  <!-- No Account Selected -->
  <div
    x-show="!currentAccount && !loading"
    class="bg-white rounded-lg shadow-sm border border-gray-200 p-6"
  >
    <div class="text-center">
      <div class="w-16 h-16 mx-auto mb-4 bg-gray-100 rounded-full flex items-center justify-center">
        <i class="fas fa-users text-2xl text-gray-400"></i>
      </div>
      <h3 class="text-lg font-medium text-gray-900 mb-2">
        Select a Google Ads Account
      </h3>
      <p class="text-gray-500 mb-4">
        Choose an account from the dropdown above to view its performance metrics
      </p>
      <div class="flex items-center justify-center text-sm text-gray-400">
        <i class="fas fa-arrow-up mr-2"></i>
        <span>Click "Select Account" to get started</span>
      </div>
    </div>
  </div>
</div>

<script>
  function multiAccountDashboard() {
    return {
      currentAccount: null,
      metrics: null,
      loading: false,
      lastUpdated: null,
      init() {
        // Listen for account changes
        window.addEventListener("accountChanged", event => {
          this.currentAccount = event.detail.account;
          this.loadMetrics();
        });
        // Load current account from localStorage
        this.loadCurrentAccount();
        if (this.currentAccount) {
          this.loadMetrics();
        }
      },
      loadCurrentAccount() {
        const saved = localStorage.getItem("current_google_ads_account");
        if (saved) {
          try {
            this.currentAccount = JSON.parse(saved);
          } catch (e) {
            localStorage.removeItem("current_google_ads_account");
          }
        }
      },
      async loadMetrics() {
        if (!this.currentAccount) return;
        this.loading = true;
        try {
          const response = await fetch(`/integrations/accounts/${this.currentAccount.id}/metrics`, {
            headers: {
              "X-Requested-With": "XMLHttpRequest",
              Accept: "application/json"
            }
          });
          if (!response.ok) {
            throw new Error("Failed to load metrics");
          }
          const data = await response.json();
          if (data.success) {
            this.metrics = data.metrics;
            this.lastUpdated = new Date().toLocaleString();
          }
        } catch (error) {
          console.error("Error loading metrics:", error);
          if (window.integrationManager) {
            window.integrationManager.showNotification("Failed to load account metrics", "error");
          }
        } finally {
          this.loading = false;
        }
      },
      async refreshMetrics() {
        await this.loadMetrics();
        if (window.integrationManager) {
          window.integrationManager.showNotification("Metrics refreshed successfully", "success");
        }
      },
      formatCurrency(value) {
        return new Intl.NumberFormat("en-US", {
          style: "currency",
          currency: "USD",
          minimumFractionDigits: 2
        }).format(value);
      },
      formatNumber(value) {
        return new Intl.NumberFormat("en-US").format(value);
      },
      formatPercentage(value) {
        return (value || 0).toFixed(2) + "%";
      }
    };
  }
</script>

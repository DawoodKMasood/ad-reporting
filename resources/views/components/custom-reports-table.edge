<script>
  // Report management functions
  function generateReport(reportId) {
    console.log("Generating report:", reportId);
    // TODO: Implement report generation
    alert("Report generation feature coming soon!");
  }
  
  function toggleReportMenu(reportId) {
    const menu = document.getElementById(`report-menu-${reportId}`);
    // Hide all other menus first
    document.querySelectorAll('[id^="report-menu-"]').forEach(m => {
      if (m.id !== `report-menu-${reportId}`) {
        m.classList.add("hidden");
      }
    });
    // Toggle current menu
    menu.classList.toggle("hidden");
  }
  
  function editReport(reportId) {
    console.log("Editing report:", reportId);
    // TODO: Implement edit functionality
    alert("Edit report feature coming soon!");
  }
  
  function duplicateReport(reportId) {
    console.log("Duplicating report:", reportId);
    // TODO: Implement duplicate functionality
    alert("Duplicate report feature coming soon!");
  }
  
  function archiveReport(reportId) {
    if (confirm("Are you sure you want to archive this report?")) {
      // Make a form submission to archive the report
      const form = document.createElement("form");
      form.method = "POST";
      form.action = `/reports/${reportId}/archive`;
      form.style.display = "none";
      // Add CSRF token
      const csrfToken = document.querySelector('meta[name="csrf-token"]')?.getAttribute("content");
      if (csrfToken) {
        const csrfInput = document.createElement("input");
        csrfInput.type = "hidden";
        csrfInput.name = "_token";
        csrfInput.value = csrfToken;
        form.appendChild(csrfInput);
      }
      document.body.appendChild(form);
      form.submit();
    }
  }
  
  function deleteReport(reportId) {
    if (confirm("Are you sure you want to delete this report? This action cannot be undone.")) {
      // Make a form submission to delete the report
      const form = document.createElement("form");
      form.method = "POST";
      form.action = `/reports/${reportId}`;
      form.style.display = "none";
      // Add method override for DELETE
      const methodInput = document.createElement("input");
      methodInput.type = "hidden";
      methodInput.name = "_method";
      methodInput.value = "DELETE";
      form.appendChild(methodInput);
      // Add CSRF token
      const csrfToken = document.querySelector('meta[name="csrf-token"]')?.getAttribute("content");
      if (csrfToken) {
        const csrfInput = document.createElement("input");
        csrfInput.type = "hidden";
        csrfInput.name = "_token";
        csrfInput.value = csrfToken;
        form.appendChild(csrfInput);
      }
      document.body.appendChild(form);
      form.submit();
    }
  }
  // Close menus when clicking outside
  
  document.addEventListener("click", function(event) {
    if (!event.target.closest('[data-action="toggle-menu"]')) {
      document.querySelectorAll('[id^="report-menu-"]').forEach(menu => {
        menu.classList.add("hidden");
      });
    }
  });
</script>
